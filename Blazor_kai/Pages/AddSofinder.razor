@page "/addition"


@using Blazor_kai.Data;
@inject HomeController HomeController;
@inject NavigationManager NavigationManager;


<style media="screen">
      *,
*:before,
*:after{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
body{
    background-color: #080710;
}
form{
    height: 660px;
    width: 400px;
    background-color: rgba(255,255,255,0.13);
    position: absolute;
    transform: translate(-50%,-50%);
    top: 50%;
    left: 50%;
    border-radius: 10px;
    backdrop-filter: blur(10px);
    border: 2px solid rgba(255,255,255,0.1);
    box-shadow: 0 0 40px rgba(8,7,16,0.6);
    padding: 50px 35px;
}
form *{
    font-family: 'Poppins',sans-serif;
    color: #ffffff;
    letter-spacing: 0.5px;
    outline: none;
    border: none;
}
form h3{
    font-size: 32px;
    font-weight: 500;
    line-height: 42px;
    text-align: center;
}

label{
    display: block;
    margin-top: 30px;
    font-size: 16px;
    font-weight: 500;
}
.name{
    display: block;
    height: 50px;
    width: 100%;
    background-color: rgba(255,255,255,0.07);
    border-radius: 3px;
    padding: 0 10px;
    margin-top: 8px;
    font-size: 14px;
    font-weight: 300;
}

.radio{
    height: 25px;
    width: 10%;
    background-color: rgba(255,255,255,0.07);
    border-radius: 3px;
    padding: 0 10px;
    margin-top: 8px;
    font-size: 14px;
    font-weight: 300;
}

.description{
    display: block;
    height: 50px;
    width: 100%;
    background-color: rgba(255,255,255,0.07);
    border-radius: 3px;
    padding: 0 10px;
    margin-top: 8px;
    font-size: 14px;
    font-weight: 300;
}

::placeholder{
    color: #e5e5e5;
}
button{
    margin-top: 50px;
    width: 100%;
    background-color: #ffffff;
    color: #080710;
    padding: 15px 0;
    font-size: 18px;
    font-weight: 600;
    border-radius: 5px;
    cursor: pointer;
}

    </style>

<form>
    <h3>Добавление соискателя</h3>

    <label>Имя</label>
    <input @bind="@user.Name" type="text" placeholder="Иванов Иван Иванович" id="name">

    <label>Email / Telegram</label>
    <input @bind="@user.eMail" type="text" placeholder="qwerty@mail.ru" id="email">

    <label>Описание</label>
    <input @bind="@user.Info" type="text" placeholder="Описание..." id="description">

    <label>Вакансия</label>
    <input @bind="@user.Vacansion" type="text" placeholder="Ожидаемая вакансия" id="vacansion">

    <label>Статус соискателя:</label>
    <select @bind="@user.Status">
        <option selected value="sofinder">Кандидат</option>
        <option value="resume">Резюме на рассмотрении</option>
        <option value="interview">Собеседование</option>
        <option value="work">В штате</option>
   </select>
    <button type="button" @onclick="Add" id="auth_btn">Добавить</button>

</form>

@code {
    User user = new User();
    public void Add()
    {
        HomeController.Registration(user);
        NavigationManager.NavigateTo("/");
    }
}